# Environment variables for Docker deployment
# Copy this file to .env and modify as needed

# Application Configuration
APP_NAME=RAG System API
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Database Configuration
CHROMADB_PATH=./chroma_db

# API Configuration (uncomment and set for production)
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
# OPENROUTER_HTTP_REFERER=https://github.com/your-username/rag-system
# OPENROUTER_APP_TITLE=RAG System

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
MODEL_SLUG=openai/gpt-3.5-turbo

# Performance Configuration
MAX_SEARCH_RESULTS=20
MAX_CHAT_RESULTS=10
MAX_DOCUMENT_LENGTH=10000
REQUEST_TIMEOUT=30

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=rag-system
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development
JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_CONSOLE_EXPORT=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Configuration (for production)
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
# CORS_ORIGINS=http://localhost:3000,https://your-frontend.com

# Nginx Configuration (if using reverse proxy)
# NGINX_PORT=80
# NGINX_SSL_PORT=443

# Development Configuration
DEVELOPMENT_MODE=false
DEBUG=false
